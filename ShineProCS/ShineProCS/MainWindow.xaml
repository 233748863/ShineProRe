<hc:Window x:Class="ShineProCS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:local="clr-namespace:ShineProCS"
        xmlns:infra="clr-namespace:ShineProCS.Infrastructure"
        mc:Ignorable="d"
        Title="ShinePro C# WPF - 高级技能循环引擎" Height="650" Width="1000"
        Background="#F5F5F5" WindowStartupLocation="CenterScreen">

    <hc:Window.Resources>
        <!-- 引入转换器 -->
        <local:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- 托盘菜单资源 -->
        <ContextMenu x:Key="TrayMenu">
            <MenuItem Header="显示主界面" Click="ShowWindow_Click"/>
            <MenuItem Header="隐藏主界面" Click="HideWindow_Click"/>
            <Separator/>
            <MenuItem Header="启动引擎" Click="StartEngine_Click"/>
            <MenuItem Header="停止引擎" Click="StopEngine_Click"/>
            <Separator/>
            <MenuItem Header="退出程序" Click="ExitApp_Click"/>
        </ContextMenu>
    </hc:Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题区域 -->
        <StackPanel Grid.Row="0" Margin="10,0,10,10">
            <TextBlock Text="ShinePro C# WPF" FontSize="24" FontWeight="Bold" Foreground="#333"/>
            <TextBlock Text="基于视觉识别的高级技能循环引擎" FontSize="12" Foreground="#666"/>
        </StackPanel>

        <!-- 核心内容区域 - TabControl -->
        <hc:TabControl Grid.Row="1" Margin="5">
            
            <!-- 页签 1：运行状态 -->
            <hc:TabItem Header="运行状态">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="250"/>
                    </Grid.ColumnDefinitions>

                    <!-- 状态面板 -->
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="8" Padding="15" Background="White">
                            <StackPanel>
                                <TextBlock Text="引擎状态" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                <UniformGrid Columns="2">
                                    <StackPanel Margin="5">
                                        <TextBlock Text="当前模式" Foreground="#888"/>
                                        <TextBlock Text="{Binding StatusText}" FontSize="20" FontWeight="Bold" Foreground="#2196F3"/>
                                    </StackPanel>
                                    <StackPanel Margin="5">
                                        <TextBlock Text="执行次数" Foreground="#888"/>
                                        <TextBlock Text="{Binding ExecutionCount}" FontSize="20" FontWeight="Bold"/>
                                    </StackPanel>
                                    <StackPanel Margin="5">
                                        <TextBlock Text="平均响应" Foreground="#888"/>
                                        <TextBlock Text="{Binding AvgResponseTime, StringFormat={}{0:F4}s}" FontSize="20" FontWeight="Bold"/>
                                    </StackPanel>
                                    <StackPanel Margin="5">
                                        <TextBlock Text="成功率" Foreground="#888"/>
                                        <TextBlock Text="{Binding SuccessRate, StringFormat={}{0:F1}%}" FontSize="20" FontWeight="Bold" Foreground="#4CAF50"/>
                                    </StackPanel>
                                </UniformGrid>

                                <Separator Margin="0,15"/>

                                <TextBlock Text="资源监控" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                <UniformGrid Columns="2">
                                    <StackPanel Margin="5">
                                        <TextBlock Text="内存占用 (私有/工作集)" Foreground="#888"/>
                                        <TextBlock Text="{Binding MemoryStats}" FontSize="16" FontWeight="SemiBold"/>
                                    </StackPanel>
                                    <StackPanel Margin="5">
                                        <TextBlock Text="性能报告" Foreground="#888"/>
                                        <TextBlock Text="{Binding PerformanceReport}" FontSize="16" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </UniformGrid>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- 控制面板 -->
                    <StackPanel Grid.Column="1">
                        <Button Content="启动引擎" Command="{Binding StartEngineCommand}" 
                                IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBooleanConverter}}"
                                Height="50" Margin="0,0,0,10" Background="#4CAF50" Foreground="White" FontSize="16" FontWeight="Bold"/>
                        
                        <Button Content="暂停/恢复" Command="{Binding PauseEngineCommand}" 
                                IsEnabled="{Binding IsRunning}"
                                Height="50" Margin="0,0,0,10" Background="#FF9800" Foreground="White" FontSize="16" FontWeight="Bold"/>

                        <Button Content="停止引擎" Command="{Binding StopEngineCommand}" 
                                IsEnabled="{Binding IsRunning}"
                                Height="50" Margin="0,0,0,10" Background="#F44336" Foreground="White" FontSize="16" FontWeight="Bold"/>

                        <Button Content="内存清理" Command="{Binding ForceCleanupCommand}" 
                                Height="40" Margin="0,10,0,0" Background="#9E9E9E" Foreground="White" FontSize="14"/>
                    </StackPanel>
                </Grid>
            </hc:TabItem>

            <!-- 页签 2：技能配置 -->
            <hc:TabItem Header="技能配置">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 技能列表 -->
                    <DockPanel Grid.Column="0" Margin="0,0,10,0">
                        <StackPanel DockPanel.Dock="Bottom" Margin="0,10,0,0">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,5">
                                <Button Content="上移" Command="{Binding MoveSkillUpCommand}" Margin="0,0,5,0" Style="{StaticResource ButtonInfo.Small}"/>
                                <Button Content="下移" Command="{Binding MoveSkillDownCommand}" Style="{StaticResource ButtonInfo.Small}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="添加" Command="{Binding AddSkillCommand}" Margin="0,0,5,0" Style="{StaticResource ButtonPrimary.Small}"/>
                                <Button Content="删除" Command="{Binding DeleteSkillCommand}" Style="{StaticResource ButtonDanger.Small}"/>
                            </StackPanel>
                            <TextBlock Text="* 技能将按列表顺序依次检测" Foreground="#999" FontSize="11" Margin="0,10,0,0" HorizontalAlignment="Center"/>
                        </StackPanel>
                        <ListBox ItemsSource="{Binding Skills}" SelectedItem="{Binding SelectedSkill}" DisplayMemberPath="Name" hc:TitleElement.Title="技能列表"/>
                    </DockPanel>

                    <!-- 技能详情编辑 -->
                    <Border Grid.Column="1" BorderBrush="#DDD" BorderThickness="1" CornerRadius="8" Padding="15" Background="White">
                        <ScrollViewer>
                            <StackPanel DataContext="{Binding SelectedSkill}">
                                <TextBlock Text="技能详情设置" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                                
                                <hc:TextBox Text="{Binding Name}" hc:TitleElement.Title="技能名称" Margin="0,0,0,10"/>
                                <hc:TextBox Text="{Binding KeyCode}" hc:TitleElement.Title="按键代码 (KeyCode)" Margin="0,0,0,10"/>
                                <hc:TextBox Text="{Binding Priority}" hc:TitleElement.Title="优先级" Margin="0,0,0,10"/>
                                
                                <Separator Margin="0,10"/>
                                <TextBlock Text="视觉检测 (核心)" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                <UniformGrid Columns="2">
                                    <hc:TextBox Text="{Binding IconRegion[0]}" hc:TitleElement.Title="X" Margin="2"/>
                                    <hc:TextBox Text="{Binding IconRegion[1]}" hc:TitleElement.Title="Y" Margin="2"/>
                                    <hc:TextBox Text="{Binding IconRegion[2]}" hc:TitleElement.Title="W" Margin="2"/>
                                    <hc:TextBox Text="{Binding IconRegion[3]}" hc:TitleElement.Title="H" Margin="2"/>
                                </UniformGrid>
                                <Button Content="在屏幕上框选区域" 
                                        Command="{Binding DataContext.SelectRegionCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Margin="0,5,0,0" Style="{StaticResource ButtonInfo.Small}"/>

                                <hc:TextBox Text="{Binding TemplatePath}" hc:TitleElement.Title="模板路径" Margin="0,10,0,0"/>
                                <Button Content="选择模板文件" 
                                        Command="{Binding DataContext.SelectTemplateFileCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Margin="0,5,0,10" Style="{StaticResource ButtonInfo.Small}"/>
                                
                                <hc:TextBox Text="{Binding SimilarityThreshold}" hc:TitleElement.Title="匹配阈值" Margin="0,0,0,10"/>

                                <Separator Margin="0,10"/>
                                <TextBlock Text="释放前置条件" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                <hc:TextBox Text="{Binding MinHp}" hc:TitleElement.Title="最低 HP %" Margin="0,0,0,10"/>
                                <hc:TextBox Text="{Binding MinMp}" hc:TitleElement.Title="最低 MP %" Margin="0,0,0,10"/>
                                <CheckBox IsChecked="{Binding RequireTarget}" Content="需要有目标" Margin="0,5,0,10"/>

                                <Separator Margin="0,10"/>
                                <DockPanel Margin="0,0,0,10">
                                    <TextBlock Text="Buff/Debuff 视觉检测要求" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    <Button Content="添加要求" Command="{Binding DataContext.AddBuffRequirementCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                            HorizontalAlignment="Right" Style="{StaticResource ButtonPrimary.Small}"/>
                                </DockPanel>

                                <ItemsControl ItemsSource="{Binding BuffRequirements}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="#EEE" BorderThickness="1" CornerRadius="4" Padding="10" Margin="0,0,0,10" Background="#FAFAFA">
                                                <StackPanel>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <hc:TextBox Text="{Binding Name}" hc:TitleElement.Title="Buff 名称" Margin="0,0,5,0"/>
                                                        <Button Grid.Column="1" Content="删除" Command="{Binding DataContext.DeleteBuffRequirementCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                                CommandParameter="{Binding}" Style="{StaticResource ButtonDanger.Small}"/>
                                                    </Grid>

                                                    <UniformGrid Columns="2" Margin="0,5">
                                                        <CheckBox IsChecked="{Binding IsRequired}" Content="必须满足" Margin="2"/>
                                                        <CheckBox IsChecked="{Binding IsDebuff}" Content="是减益(Debuff)" Margin="2"/>
                                                    </UniformGrid>

                                                    <TextBlock Text="视觉参数" FontSize="11" Foreground="#999" Margin="0,5,0,2"/>
                                                    <UniformGrid Columns="4">
                                                        <hc:TextBox Text="{Binding IconRegion[0]}" hc:TitleElement.Title="X" Margin="1"/>
                                                        <hc:TextBox Text="{Binding IconRegion[1]}" hc:TitleElement.Title="Y" Margin="1"/>
                                                        <hc:TextBox Text="{Binding IconRegion[2]}" hc:TitleElement.Title="W" Margin="1"/>
                                                        <hc:TextBox Text="{Binding IconRegion[3]}" hc:TitleElement.Title="H" Margin="1"/>
                                                    </UniformGrid>
                                                    
                                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                        <Button Content="框选区域" Command="{Binding DataContext.SelectRegionCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                                CommandParameter="{Binding}" Style="{StaticResource ButtonInfo.Small}" Margin="0,0,5,0"/>
                                                        <Button Content="选择模板" Command="{Binding DataContext.SelectTemplateFileCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                                CommandParameter="{Binding}" Style="{StaticResource ButtonInfo.Small}"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <Button Content="保存所有配置" Command="{Binding DataContext.SaveConfigCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                        Margin="0,20,0,0" Style="{StaticResource ButtonSuccess}" Height="40"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </hc:TabItem>

            <!-- 页签 3：全局设置 -->
            <hc:TabItem Header="全局设置">
                <Grid Margin="20">
                    <StackPanel MaxWidth="500" HorizontalAlignment="Left">
                        <TextBlock Text="引擎全局配置" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,20"/>
                        
                        <hc:TextBox Text="{Binding AppSettings.LoopInterval}" hc:TitleElement.Title="循环间隔 (ms)" Margin="0,0,0,15"/>
                        <CheckBox IsChecked="{Binding AppSettings.EnableSmartMode}" Content="启用智能模式 (图像识别)" Margin="0,0,0,15"/>
                        
                        <TextBlock Text="全局检测区域" Margin="0,10,0,5"/>
                        <UniformGrid Columns="2">
                            <hc:TextBox Text="{Binding AppSettings.DetectionRegion[0]}" hc:TitleElement.Title="X" Margin="2"/>
                            <hc:TextBox Text="{Binding AppSettings.DetectionRegion[1]}" hc:TitleElement.Title="Y" Margin="2"/>
                            <hc:TextBox Text="{Binding AppSettings.DetectionRegion[2]}" hc:TitleElement.Title="W" Margin="2"/>
                            <hc:TextBox Text="{Binding AppSettings.DetectionRegion[3]}" hc:TitleElement.Title="H" Margin="2"/>
                        </UniformGrid>

                        <Button Content="保存全局配置" Command="{Binding SaveConfigCommand}" 
                                Margin="0,30,0,0" Style="{StaticResource ButtonPrimary}" Height="40"/>
                    </StackPanel>
                </Grid>
            </hc:TabItem>
        </hc:TabControl>

        <!-- 页脚 -->
        <TextBlock Grid.Row="2" Text="© 2025 ShinePro Project - C# WPF Re-implementation" 
                   HorizontalAlignment="Center" Foreground="#999" Margin="0,10,0,0"/>
    </Grid>
</hc:Window>
